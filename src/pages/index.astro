---
import CompassBox from "@components/CompassBox.astro";
import Features from "@components/Features.astro";
import Hero from "@components/Hero.astro";
import WordBubble from "@components/WordBubble.astro";
import Layout from "@layouts/Layout.astro";
import { Testimonials } from "src/solid/Testimonials";
---

<Layout title="Welcome to Salam App.">
  <Hero />
  <WordBubble />
  <Features />
  <Testimonials client:idle />
  <CompassBox />
</Layout>

<style>
  @tailwind base; /* Preflight will be injected here */

  @tailwind components;

  @tailwind utilities;
  html {
    scroll-behavior: smooth;
  }
</style>
