---
import { Image } from "@astrojs/image/components";
import Layout from "@layouts/Layout.astro";
import CiLinkedin from "~icons/ci/linkedin";
import SparkImage from "../../public/assets/profiles/spark.png";

import CiTwitter from "~icons/ci/twitter";
---

<Layout title="Welcome to Salam App.">
