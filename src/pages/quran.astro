---
import Layout from "@layouts/Layout.astro";
import { Image } from "@astrojs/image/components";

import quran1 from "../../public/quran/quranList.png";
import quran2 from "../../public/quran/quranOnly.png";
import quran3 from "../../public/quran/quranPlayer.png";
import quran4 from "../../public/quran/verseByVerse.png";
import quran5 from "../../public/quran/translation.png";

import theme1 from  "../../public/themes/classic.png";
import theme2 from "../../public/themes/default.png";
import theme3 from "../../public/themes/pastel.png";
import theme4 from "../../public/themes/Rashidun.png";

---
    
<Layout title="Welcome to Salam App.">
  <div class="sm:flex sm:justify-around sm:m-6">
    <div>
      <div
        class="text-center sm:text-left text-7xl text-white font-bold mt-16 underline underline-offset-8 decoration-aquamarine"
      >
        QURAN
      </div>
      <p class="text-white text-4xl font-semibold mt-10 ml-16">
        Featuring 3 modes
      </p>
      <ul class="mt-7 ml-28">
        <li class="text-white text-2xl font-medium list-disc">
          Verse by Verse
        </li>
        <li class="text-white text-2xl font-medium list-disc">Mushaf Mode</li>
        <li class="text-white text-2xl font-medium list-disc">List Mode</li>
      </ul>

      <p class="text-white text-4xl font-semibold mt-16 ml-16">Including</p>
      <ul class="mt-7 ml-28">
        <li class="text-white text-2xl font-medium list-disc">Tafsir</li>
        <li class="text-white text-2xl font-medium list-disc">Quran Audio</li>
        <li class="text-white text-2xl font-medium list-disc">
          Transliteration
        </li>
        <li class="text-white text-2xl font-medium list-disc">Bookmarks</li>
        <li class="text-white text-2xl font-medium list-disc">Translation</li>
      </ul>
    </div>
    <div class="swiper mySwiper mx-auto sm:mx-0 mt-12 flex-shrink-0">
      <div class="swiper-wrapper">
        <Image
          src={quran1}
          alt="picture of quran"
          height={620}
          width={300}
          class="swiper-slide min-w-full"
          max-height="700"
        />
        <Image
          src={quran2}
          alt="picture of quran"
          height={620}
          width={300}
          class="swiper-slide min-w-full"
          max-height="700"
        />
        <Image
          src={quran3}
          alt="picture of quran"
          height={620}
          width={300}
          class="swiper-slide min-w-full"
          max-height="700"
        />
        <Image
          src={quran4}
          alt="picture of quran"
          height={620}
          width={300}
          class="swiper-slide min-w-full"
          max-height="700"
        />
        <Image
          src={quran5}
          alt="picture of quran"
          height={620}
          width={300}
          class="swiper-slide min-w-full"
          max-height="700"
        />
        <Image
          src={quran1}
          alt="picture of quran"
          height={620}
          width={300}
          class="swiper-slide min-w-full"
          max-height="700"
        />
      </div>
      <div class="swiper-pagination m-[-10px]"></div>
    </div>
  </div>
  <!--this part is quran only below is themes -->
  <div class="sm:flex sm:flex-row-reverse sm:justify-around sm:m-6">
    <div>
      <div
        class="text-center sm:text-left text-7xl text-white font-bold mt-20 underline underline-offset-8 decoration-aquamarine"
      >
        THEMES
      </div>
      <p class="text-white text-4xl font-semibold mt-10 ml-16">
        Featuring 4 Themes
      </p>
      <ul class="mt-7 ml-28">
        <li class="text-white text-2xl font-medium list-disc">Rshidun</li>
        <li class="text-white text-2xl font-medium list-disc">Pastel</li>
        <li class="text-white text-2xl font-medium list-disc">Classic</li>
        <li class="text-white text-2xl font-medium list-disc">Edster</li>
      </ul>

      <p class="text-white text-4xl font-semibold mt-16 ml-16">
        Adapting to prayer times
      </p>
    </div>
    <div class="swiper mySwiper mx-auto sm:mx-0 mt-12">
      <div class="swiper-wrapper">
        <Image
          src={theme1}
          alt="picture of quran"
          height={620}
          width={300}
          class="swiper-slide min-w-full"
          max-height="700"
        />
        <Image
          src={theme2}
          alt="picture of quran"
          height={620}
          width={300}
          class="swiper-slide min-w-full"
          max-height="700"
        />
        <Image
          src={theme3}
          alt="picture of quran"
          height={620}
          width={300}
          class="swiper-slide min-w-full"
          max-height="700"
        />
        <Image
          src={theme4}
          alt="picture of quran"
          height={620}
          width={300}
          class="swiper-slide min-w-full"
          max-height="700"
        />
      </div>
      <div class="swiper-pagination m-[-10px]"></div>
    </div>
  </div>
  <!-- this part is themes only below is -->
</Layout>

<style>
  @tailwind components;
  @tailwind utilities;
  @tailwind base;
  html {
    scroll-behavior: smooth;
  }
  .swiper {
    height: 620px;
    width: 300px;
  }
</style>

<script>
  import Swiper, { Navigation, Pagination, Autoplay } from "swiper";
  import "swiper/css";
  import "swiper/css/pagination";
  import "swiper/css/autoplay";

  var swiper = new Swiper(".mySwiper", {
    autoplay: {
    delay: 2000,
    pauseOnMouseEnter: true
  },
    loop: true,
    preloadImages: false,
    lazy: true,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    modules: [ Navigation, Pagination, Autoplay],
  });
</script>
