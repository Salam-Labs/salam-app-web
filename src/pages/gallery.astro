  import "swiper/css/autoplay";

  // @ts-ignore
let swiper = new Swiper(".mySwiper", {
    autoplay: {
      delay: 2000,
      pauseOnMouseEnter: true,
    },
    loop: true,
    preloadImages: false,
    lazy: true,
    pagination: {
     el: ".swiper-pagination",
      clickable: true,
    },
    modules: [Navigation, Pagination, Autoplay],
  });
</script>
