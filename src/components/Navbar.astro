    <div class="flex items-center justify-between h-16">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <Icon name="bi:moon-stars-fill" height="30px" class="text-swans-50" />
        </div>
      </div>
      <div class="hidden sm:ml-6 sm:block">
