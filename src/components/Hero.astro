---
import { Image } from "@astrojs/image/components";
import quranImage from "../../public/assets/quran1.png";
import { Modal } from "../solid/Modal.jsx";
---

<!--
  This example requires Tailwind CSS v2.0+

  The alpine.js code is *NOT* production ready and is included to preview
  possible interactivity
-->
<div class="bg-grey-500 pb-8 sm:pb-12 lg:pb-12">
  <div class="pt-8 overflow-hidden sm:pt-12 lg:relative lg:py-48">
    <div class="lg:w-fit  lg:max-w-3xl   ">
      <div>
        <div class="flex flex-col">
          <div class="flex flex-col">
            <h1
              class="text-6xl text-center font-extrabold text-white tracking-tight sm:text-8xl ml-0"
            >
              AD FREE.
            </h1>
            <h1
              class="text-5xl text-center font-extrabold text-white tracking-tight sm:ml-12 sm:text-7xl "
            >
            PRIVACY ALWAYS.
            </h1>
            <h1
              class="text-4xl text-center font-extrabold text-white tracking-tight sm:ml-24 sm:text-7xl "
            >
              FOREVER FREE.
            </h1>
          </div>
          <div class="flex justify-end flex-col items-center">
            <p class="mt-2 text-center text-2xl text-white content-end font-bold mb-5">
              NO COMPROMISES.
            </p>

            <Modal client:idle />
          </div>
        </div>
      </div>
    </div>

    <div class="sm:mx-auto sm:max-w-3xl sm:px-6">
      <div
        class="py-12 sm:relative sm:mt-12 sm:py-16 lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2"
      >
        <div class="hidden sm:block">
          <div
            class="absolute inset-y-0 left-1/2 w-screen bg-grey-500 rounded-l-3xl lg:left-80 lg:right-0 lg:w-full"
          >
          </div>
        </div>
        <div
          class="hidde6 relative pl-4 -mr-40 sm:mx-auto sm:max-w-3xl sm:px-0 lg:max-w-none lg:h-full lg:pl-12"
        >
          <Image
            src={quranImage}
            alt="quranImage"
            height={620}
            width={300}
            class="relative mr-auto ml-44"
            max-height="700"
          />
        </div>
      </div>
    </div>
  </div>
</div>
